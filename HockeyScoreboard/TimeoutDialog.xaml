<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HockeyScoreboard"
        xmlns:Controls="clr-namespace:HockeyScoreboard.Controls" x:Class="HockeyScoreboard.TimeoutDialog"
        mc:Ignorable="d"
        Title="Give timeout" Height="300" Width="400" Loaded="Window_Loaded" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Closed="Window_Closed">
    <Window.Background>
        <SolidColorBrush Color="{DynamicResource ColorBackgroundMain}"/>
    </Window.Background>
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource ColorBackgroundMain}"/>
        </Grid.Background>
        <Label Content="Select Team to grant Timeout to:" HorizontalAlignment="Center" VerticalAlignment="Top" Width="380" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="39" FontSize="20">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource ColorTextDefault}"/>
            </Label.Foreground>
        </Label>
        <Button Content="Team 1" x:Name="ButtonSelectTeam1" Click="ButtonSelectTeam1_Click" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Height="70" Width="169" Style="{DynamicResource CustomButtonStyle}" FontSize="20"/>
        <Button Content="Team 2" x:Name="ButtonSelectTeam2" Click="ButtonSelectTeam2_Click" HorizontalAlignment="Left" Margin="221,39,0,0" VerticalAlignment="Top" Height="69" Width="169" Style="{DynamicResource CustomButtonStyle}" FontSize="20"/>
        <Label Content="Timeout length: (default 1:30)" x:Name="LabelMessage" HorizontalAlignment="Center" Margin="0,114,0,0" VerticalAlignment="Top" Width="380" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="41" FontSize="20">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource ColorTextDefault}"/>
            </Label.Foreground>
        </Label>
        <Controls:NumericSpinner x:Name="UpDownMinutes" Value="1" Step="1" Minimum="0" HorizontalAlignment="Left" Height="50" Margin="10,171,0,0" VerticalAlignment="Top" Width="169"/>
        <Controls:NumericSpinner x:Name="UpDownSeconds" Value="30" Step="1" Minimum="0" Maximum="59" HorizontalAlignment="Left" Height="50" Margin="221,171,0,0" VerticalAlignment="Top" Width="169"/>
        <Label Content=":" HorizontalAlignment="Center" Margin="0,179,0,0" VerticalAlignment="Top" Width="42" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Height="34" FontSize="20" Padding="0,0,0,0">
            <Label.Foreground>
                <SolidColorBrush Color="{DynamicResource ColorTextDefault}"/>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
