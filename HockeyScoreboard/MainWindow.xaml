                        <SolidColorBrush Color="{DynamicResource ColorTextDefault}"/>
                    </GroupBox.Foreground>
                    <Grid>
                        <TextBox TextChanged="TextBoxTeam2Name_TextChanged" x:Name="TextBoxTeam2Name" TextWrapping="NoWrap" Text="Team 2" FontSize="24" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="34" Background="{DynamicResource BrushBackgroundSecondary}" BorderBrush="{DynamicResource BrushBorderBrush}" Foreground="{DynamicResource BrushTextDefault}" Margin="5,2,0,0"/>
                        <TextBlock HorizontalAlignment="Left" Margin="1,41,0,0" TextWrapping="Wrap" Text="Score:" VerticalAlignment="Top" Height="38" Width="83" FontSize="24" Foreground="{DynamicResource BrushTextDefault}" TextAlignment="Center"/>
                        <Controls:UpDownInt x:Name="UpDownTeam2Score" ValueChanged="UpDownTeam2Score_ValueChanged" HorizontalAlignment="Left" Height="38" Margin="89,41,0,0" VerticalAlignment="Top" Width="110" Step="1" Maximum="999" Minimum="0" BorderThickness="0" FontSize="18" />
                        <TextBlock HorizontalAlignment="Left" Margin="0,93,0,0" TextWrapping="Wrap" Text="Shots:" VerticalAlignment="Top" Height="39" Width="83" FontSize="24" Foreground="{DynamicResource BrushTextDefault}" TextAlignment="Center"/>
